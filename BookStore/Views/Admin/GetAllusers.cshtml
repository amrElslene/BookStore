@model IEnumerable<BookStore.Models.domins.User>
@{
    Layout = "_Layout1";
}

<div class="container pt-3">
    
    <div class="row">
        <div class="col-md-12">
            <h3>Users</h3>

            <table class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Username</th>
                        <th>num Books</th>
                        <th>Total Pay</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Username</td>
                            <td>@item.numbooks</td>
                            <td>@item.earnfrom</td>

                            <td>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Admin/Deleteuser?id=@item.Id"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

