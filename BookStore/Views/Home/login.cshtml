@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100;1,300;1,400;1,500;1,700&family=Style+Script&display=swap&family=Abril+Fatface&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/css/createAccount.css">

    <title>Login</title>

    <style>
        button {
            width: 100%;
            margin-bottom: 10px;
        }
        
        .signup__cancel:hover {
            background-color: white;
        }
        
        .signup__cancel a:hover {
            color: rgb(204, 12, 44);
            font-weight: bold;
        }
        
        .main__create__area .div__two__account {
            box-shadow: 0px 0px 30px #131212;
            background-color: #1C3B68;
            background-image: url(../imgs/124383.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            width: 50%;
        }
        
        .login__link {
            margin-top: 10px;
            margin-bottom: -20px;
        }
        
        .login__link a {
            text-decoration: none;
            color: gray;
            font-family: 'Baloo 2', cursive;
            font-size: 80%;
            padding: 0px 8px;
        }
        
        .login__link a:hover {
            color: black;
            background-color: rgb(190, 187, 187);
            padding: 0px 8px;
            border-radius: 10px;
        }
    </style>

</head>

<body>

    <section class="section" id="background__area">
        <div class="main__back__div">
            <div class="div__one"></div>
            <div class="div__two"></div>
        </div>
    </section>

    <section class="section" id="create__page">
        <div class="main__create__area">
            <div class="div__one__account">
                <div class="signup__content__background">
                    <div class="signup-heading">
                        <h2>Login Account </h2>
                    </div>
                    <form name="myform"  method="post" onsubmit="return validateform()">

                        <div class="form-group">
                            <label for="Username">Username:</label><br>
                            <input type="text" name="Username" id="Username" placeholder="Username"><span id="Username"></span>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label><br>
                            <input type="password" name="password" id="password" placeholder="Enter your password"><span id="passerror"></span>
                        </div>

                       

                        <div class="btn">
                            <button type="submit" value="Submit" id="Submit" class="signup__confirm">Login</button>
                            <button class="signup__cancel"><a href="/">Cancel</a></button>
                        </div>
                        <div class="form-group">
                            <p class="login__link"> <a href="/home/creatingaccount">Create Account</a> </p>
                        </div>
                        </form>
                </div>


            </div>
            <div class="div__two__account">
                <div class="section__two__content">
                    <h2>
                        Welcome to Our Book Store
                    </h2>
                    <p>We provide our customers with a wide variety of Books from different categories. <br><br> Have a look into our <a href="/"> Books</a>
                    </p>

                </div>
            </div>
        </div>
    </section>

    <script>
        function validateform() {
            let email = document.myform.email.value;
            let pass = document.myform.pass.value;

            if (email == "" || email == null) {
                alert("Invalid Email");
                return false;
            } else if (pass.length < 6) {
                alert("Password MUST contain at-least than 6 characters");
                return false;
            } else {
                alert('Login Successful. Welcome to Ature');
                return true;
            }

        }
    </script>
</body>

</html>
